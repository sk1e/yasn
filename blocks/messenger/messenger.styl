@require "../../constants.styl"


.messenger
  display flex
  flex-direction column
  justify-content center

  width 20.57rem
  
  &__name
    border-top-left-radius 0.21rem
    border-top-right-radius 0.21rem
    width 100%
    background theme-color-1
    height 5.86rem
    text-align center
    color white
    font light 2.40rem SourceSansPro
    padding-top 1.14rem
    
  &__photo-container
    background darken(theme-color-1, 5)
    height 2.43rem
    text-align center
    
  &__photo
    display inline-block
    margin-top -0.79rem
        
  &__icons
    display flex
    justify-content space-between
    margin 1.57rem 1.93rem

  
    
  &__scroll-view
    margin auto
    height 14.29rem
    width 83%
    overflow-y auto
    
  &__message-list
    margin auto
    width 100%
    display flex
    flex-direction column
    justify-content flex-end
    min-height 100%
    padding 1.43rem 0
    
    
  &__message
    color #999
    font-weight bold
    font-size 0.93rem
    margin 0.71rem 0 0 0
    padding 0.36rem 0
    &_self
      border-radius 0.21rem
      background lighten(theme-color-1, 30)

  & .text-area, .preview-column & .text-area
    width 83%
    height 5.71rem
    margin auto
    font bold 0.93rem Lato
    
  & .button
    margin auto    
    width 83%
    margin-top 1.43rem

 .preview-column &
   margin-left 1.43rem