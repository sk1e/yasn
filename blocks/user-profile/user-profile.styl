@require "../../constants.styl"

.user-profile
  display flex
  align-items center
  
  .preview-column &
    margin 20px 20px
      
  &__name
    margin-top -5px    
    font-size 18px
    
    &_theme
      &_dark-1 
        color white
      &_gray   
        color theme-color-2
    
  &__profession
    text-transform uppercase    
    font-size 11px
    font-weight heavy
    
    &_theme
      &_dark-1
        color white
      &_gray
        color theme-color-3-foreground
    
  &__contacts
    margin-top 12px
    font-size 25px
    display flex
    justify-content space-between
    width 100%
              
  &__reference
    color theme-color-2
    text-decoration none
    
    a[href=""]&      
      cursor default      
      &_theme
        &_dark-1
          color white
        &_gray
          color #666
    