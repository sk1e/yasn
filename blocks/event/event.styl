@require "../../constants.styl"

.event  
  color white
  display flex
  
  .preview-column &
    margin-left 20px
  
  &__image
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    
  &__description
    border-top-right-radius 3px
    border-bottom-right-radius 3px
    width 190px
    background theme-color-1
    padding 15px 20px
    
  &__day
    display inline-block
    font-weight light
    font-size 70px
    
  &__month
    display inline-block
    margin-left 10px
    font-size 30px
    
  &__title
    font-weight heavy
    font-size 13px
    text-transform uppercase
    
  &__text
    font-size 11.5px
    margin 5px 0
    
  &  .button
    margin-left 17px
