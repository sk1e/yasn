@require "../../constants.styl"
  
.calendar   
  &__day
    padding-top 15px
    text-align center
    width 278px
    font light 80px Lato
    background theme-color-2
    color white
    cursor default
    border-top-left-radius 4px
    border-top-right-radius 4px

  & * 
    border none !important
  
  & .ui-datepicker-year
    display none
        
  & .ui-datepicker 
    width 278px
    padding 0
    
    & .ui-datepicker-month
      font-weight 300
    
    & .ui-datepicker-header
      border-radius 0
      color white
      background #d54c2c
      font-size 22px

    & .ui-datepicker-next, .ui-datepicker-prev
      display flex
      justify-content center
      align-items center
      cursor pointer

      & > span
        display none
        
      &::after
        display block
        font-family FontAwesome
        color white
        
      &:hover
        background inherit
        font inherit
              
    & .ui-datepicker-next::after
      content '\f105'    
      
    & .ui-datepicker-prev::after
      content '\f104'          
      
    & thead th
      text-transform uppercase
      background theme-color-2
      color white
      font heavy 9px Lato
      
    & td 
      & a
        font 20px SourceSansPro
        text-align center
        color #999
      
      & .ui-state-active
        background lighten(theme-color-2, 15)
        color white
        
      & .ui-state-highlight
        background theme-color-2
        color white

    & .ui-datepicker-buttonpane
      margin 0
      padding 0
      
    & .ui-datepicker-calendar
      margin 0

    & .ui-datepicker-current
      background theme-color-3
      width 100%
      height 50px
      padding-left 17px
      margin 0
      opacity initial
      
      font-size 14px
      color #999
      font-weight heavy
      text-align left
      text-transform uppercase
      
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
