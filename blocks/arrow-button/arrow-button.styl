@require "../../constants.styl"

.arrow-button
  display flex
  justify-content center
  align-items center
  cursor pointer
  width 50px
  height 50px
  border 3px solid theme-color-1
  border-radius 50%
    
  &__arrow
    display flex
    justify-content center
    align-items center

    font-size 41px    
    &_theme
      &_inactive
      &_dark-1
        color white
      &_light-1
        color theme-color-1    
        
    & .fa-angle-left
      margin-right 3px
    & .fa-angle-right
      margin-left 4px

  &_theme
    &_inactive
      background theme-inactive-color
      border-color theme-inactive-color
    &_light-1
      background white      
    &_dark-1
      background theme-color-1

  .preview-column &
    margin-right 24px
