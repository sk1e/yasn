@require "../../global.styl"

.arrow-button
  display flex
  align-items center
  cursor pointer
  width 50px
  height 50px
  border 3px solid theme-color-1
  border-radius 50%


  
  &_preview
    margin-right 23px
  
  &__arrow
    width 17px
    height 17px
    border-style solid 
    border-width 4px 4px 0 0

    &_theme
      &_inactive
      &_dark-1
        border-color white
      &_light-1
        border-color theme-color-1
    
    &_side
      &_left
        margin-left 17px
        transform rotate(-135deg)
      &_right
        transform rotate(45deg)
        margin-left 10px


  &_theme
    &_inactive
      background theme-inactive-color
      border-color theme-inactive-color
    &_light-1
      background white      
    &_dark-1
      background theme-color-1
