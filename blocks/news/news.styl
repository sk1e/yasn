@require "../../constants.styl"

.news
  display flex
  border-radius 3px
  color white

  
  &__image
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    
  &__description
    border-top-right-radius 3px
    border-bottom-right-radius 3px
    width 190px
    //- height 100%
    background theme-color-2
    padding 20px
    
  &__title
    font-weight light
    font-size 30px
    line-height 90%
    
  &__date
    margin-top 10px
    font-weight heavy
    font-size 12px
    text-transform uppercase
    
  &__text
    font-size 11.5px