@require "../../constants.styl"

.location
  &__map
    width 600px
    height 200px
    
  &__footer
    display flex
    align-items center
    height 70px
    background theme-color-2
    color white
    padding 0 28px
        
  &__message    
    font-size 30px
    font-weight light
    
  &__address
    word-spacing 2px
    margin-left 22px
    font-size 13px
    font-weight heavy
    text-transform uppercase
    
  &__icons
    margin-left 200px
    font-size 30px
    cursor default
    
    & .fa-map-marker
      margin-left 20px
  
    
    
    