@require "./constants.styl"

.main-menu
  display flex
  flex-direction column
  max-width main-menu-max-width
  text-transform uppercase
  margin-top 5rem
  margin-right 1rem

  &__item
    padding 0.5rem 0.5rem
    font-size 1.5rem
    font-weight bold
    margin-bottom 1rem
    border-radius 0.2rem
    text-decoration none
    
    &_state
      &_active
        background theme-color-1
        color white
      &_inactive
        color theme-color-1
        
  @media screen and (max-width: 800px)
    &
      margin-top 0
      flex-direction row
      flex-wrap wrap
      justify-content space-around
      max-width 500px
      width 100%