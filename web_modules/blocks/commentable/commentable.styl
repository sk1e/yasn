@require "../video/constants.styl"

video-size-divider = 1.5
comment-video-width = video-width / video-size-divider

.commentable
  display flex
  flex-direction column
  
  &__commented-item
    display flex
    flex-wrap wrap
    justify-content space-between
    
    &-navigation
      margin-top 1rem
      display flex      
      align-self flex-end
      
      & .arrow-button:first-child
        margin-left 1rem
        margin-right 1rem

        
  &__comment-list
    margin-top 1rem
    padding-top 1rem
    height 20rem
    overflow-y auto
    overflow-x hidden

  &__profile-container
    display flex
    align-items center
    min-width 4rem
    margin-right 1rem
    
  &__comment
    display flex
    border-bottom 0.2rem solid theme-color-3-foreground
    
    & .user-profile img
      width 100%
    
  &__comment-text
    flex-basis (comment-video-width + 1rem)
    padding 0.5rem 0.5rem
    display flex
    flex-direction column
    color #333
    
    & .video
      height (video-height / video-size-divider)
      max-width comment-video-width
   
  &__input
    margin-top 1rem
    display flex
    align-items center
    
    &-photo
      margin-right 1rem
      width 20%
      min-width 4rem
   
  & .text-area
    max-width (comment-video-width + 1rem)
    width 100%
    height 10rem
    
  & .button
    margin-top 0.5rem
    align-self flex-end