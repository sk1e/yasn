.event  
  color white
  display flex
    
  &__image
    border-top-left-radius 0.21rem
    border-bottom-left-radius 0.21rem
    
  &__description
    border-top-right-radius 0.21rem
    border-bottom-right-radius 0.21rem
    width 13.8rem
    background theme-color-1
    padding-top 0.85rem
    padding-left 1.3rem
    
  &__day
    display inline-block
    font-weight light
    font-size 5.00rem
    
  &__month
    display inline-block
    margin-left 0.71rem
    font-size 2.14rem
    
  &__title
    font-weight heavy
    font-size 0.93rem
    text-transform uppercase
    margin-left 0.2rem
    margin-top 0.2rem
    letter-spacing 0.03rem
    
  &__text
    font-size 0.82rem
    margin-left 0.3rem
    margin-top 0.2rem
    letter-spacing 0.04rem
    
  &__button
    padding 0 0.75rem
    margin-top 1.3rem
    margin-left 0.9rem
