include ../button/button.pug

mixin event(title, day, month, image, mix, buttonMix)
  .event(class=mix || '')
    img.event__image(src=require("blocks/event/images/" + image) alt=title + ' image')
    .event__description
      .event__day= day
      .event__month= month
      .event__title= title
      .event__text
        block
      +button("light-1", "small", "add to calendar", ` event__button ${buttonMix || ''}`)
