@require "~constants.styl"

.news
  display flex
  color white
  
  &__image
    border-top-left-radius 0.21rem
    border-bottom-left-radius 0.21rem
    
  &__description
    border-top-right-radius 0.21rem
    border-bottom-right-radius 0.21rem
    width 13.57rem
    background theme-color-2
    padding 1.07rem
    
  &__title
    font-weight light
    font-size 2.14rem
    line-height 90%
    
  &__date
    margin-top 0.71rem
    font-weight heavy
    font-size 0.86rem
    text-transform uppercase
    
  &__text
    font-size 0.82rem