@require "../../constants.styl"
@require "./constants.styl"

.arrow-button
  display flex
  justify-content center
  align-items center
  cursor pointer
  width arrow-button-width
  height arrow-button-width
  border 0.25rem solid theme-color-1
  border-radius 50%
    
  &__arrow
    font-size 2.93rem   
    &_theme
      &_inactive
      &_dark-1
        color white
      &_light-1
        color theme-color-1    
        
    &.fa-angle-left
      margin-right 0.21rem
    &.fa-angle-right
      margin-left 0.29rem

  &_theme
    &_inactive
      background theme-color-3
      border-color theme-color-3
    &_light-1
      background white      
    &_dark-1
      background theme-color-1

