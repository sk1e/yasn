@require "~constants.styl"

pages = 4
tempted-width = 35.71rem
field-top-margin = 0.86rem
sign-up-padding = 1.43rem

.sign-up
  display flex
  flex-direction column
  justify-content space-between  
  overflow hidden
  border 0.21rem solid theme-color-1
  width 21.43rem
  height 5.00rem
  padding sign-up-padding
  border-radius 0.71rem
  margin auto
  margin-top 14.29rem
  transition border-color 0.5s, width 0.5s linear 0.5s, height 0.5s linear 0.5s
      
  &_tempted
    border-color theme-color-2
    width 35.71rem
    height 21.43rem
              
  &__join
    display flex
    justify-content center
    align-items center
    
    &_removed
      display none

    & > .button
      transition height 0.5s
      &_tempted
        height 0
        border-width 0
          
  &__join-message    
    font-size 2.14rem
    font-weight bold
    margin-right 1.43rem
    color theme-color-1
    transition opacity 0.5s
    
    &_tempted
      opacity 0
      
  &__form
    margin-top 2.14rem
    width 100%
    
  &__sections-container
    display flex
    width tempted-width * pages
    transition transform 0.5s
    

  &__drop-down-field
    display flex
    align-items center
    margin-top field-top-margin
    
    & .drop-down
      margin-top 0
  
  &__drop-down-field-label
    width 7.14rem
      
  &__section
    width tempted-width - (2 * sign-up-padding)
    margin-right 2 * sign-up-padding
    display flex
    flex-direction column

  &__message
    align-self center
    text-align center
    
  & > .button
    align-self flex-end
          
  & .stages
    align-self center
    opacity 0
    transition opacity 0.5s linear 0.5s
    
    &_tempted
      opacity 1
      
  & .tick-box-field
    margin-top 0.36rem
    width 70%    
    
  & .tick-box-field + .tick-box-field
    margin-top 0.71rem
  
  & .link
    margin-top 1.07rem
    align-self center
  
  & .tooltiped-input
  & .tick-box-field
    &:not(:first-child)
      margin-top field-top-margin
