mixin ui-kit-body__section(name)
  section.ui-kit-body__section
    h2.heading= name
    .ui-kit-body__items
      block

mixin ui-kit-body
  .ui-kit-body
    .ui-kit-body__sections
      +ui-kit-body__section('standard buttons')
        .ui-kit-body__row
          +button('dark-1', 'small', 'button')
          +button('dark-1', 'big', 'button')
          +button('dark-2', 'big', 'button')
          +button('dark-2', 'small', 'button')
        .ui-kit-body__row
          +button('light-1', 'small', 'button')
          +button('light-1', 'big', 'button')
          +button('light-2', 'big', 'button')
          +button('light-2', 'small', 'button')
      +ui-kit-body__section('arrow buttons')
        .ui-kit-body__row
          each theme in ['light-1', 'inactive', 'dark-1']
            each side in ['left', 'right']
              +arrow-button(theme, side)
      +ui-kit-body__section('percentages / pie chart')
        .ui-kit-body__row
          each percents in [0, 38, 62, 89]
            .percentage(data-value=percents)
          .pie-chart(data-values=[10, 30, 30, 30])
      +ui-kit-body__section('sliders')
        .ui-kit-body__row
          +slider('tooltiped')
          +slider('scaled')
      +ui-kit-body__section('stages')
        +stages(['1', '2', '3'], ['4', '5'])
      +ui-kit-body__section('form elements')
        .ui-kit-body__form-elements-row
          .ui-kit-body__form
            form
              +preview-tooltiped-input('ERROR', 'dark-2')(type='text', placeholder='Your Name')
              +preview-tooltiped-input('THANKS', 'dark-1')(type='text', placeholder='Your Email')
              textarea.text-area(placeholder='Your Message')
              .ui-kit-body__form-button-row
                +button('dark-1', 'big', 'submit')
          div
            +ui-kit-body__section('toggles')
              .ui-kit-body__row
                +toggle('off')
                +toggle('on')
            +ui-kit-body__section('tick boxes')
              .ui-kit-body__row
                +tick-box('checkbox', 'tick-box-1', 'on')
                +tick-box('checkbox', 'tick-box-2', 'off')
      .ui-kit-body__multisection-row
        +ui-kit-body__section('search / drop down')
          +search()
          +drop-down('fake', 21.43, ['Choose An Option', 'Option A', 'Option C'])
        +ui-kit-body__section('user profile')
