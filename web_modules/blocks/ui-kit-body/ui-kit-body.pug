  +section('location')
    +location([37.790988, -122.414978])
    
    
        
mixin calendar-messaging-sections
  .ui-kit-body__row.ui-kit-body__row_double-sectioned
    +section('calendar')
      +calendar
    +section('messaging')
      +messenger

        

