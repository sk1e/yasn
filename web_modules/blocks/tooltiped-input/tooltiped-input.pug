mixin tooltiped-input(mix)
  .tooltiped-input(class=mix || '')
    input.input&attributes(attributes)
    +tooltip('dark-2', 'left', 'tooltiped-input__tooltip', 'tooltiped-input__tooltip-pointer')(hidden)


mixin preview-tooltiped-input(text, tooltipTheme)
  .tooltiped-input
    input.input&attributes(attributes)
    +tooltip(tooltipTheme, 'left', 'tooltiped-input__tooltip', 'tooltiped-input__tooltip-pointer')
      span= text