@require "~constants.styl"
@require "./constants.styl"


.tooltip
  position relative
  color white
  display flex
  flex-direction column
  align-items center
  justify-content center
  border-radius 0.3rem
  padding 0 0.71rem
  
  &_hidden
    visibility hidden
        
  &_theme
    &_dark-1
      background theme-color-1
    &_dark-2
      background theme-color-2
    &_gray
      background theme-color-3
    &_white
      background white

  &__pointer
    transform rotate(45deg)
    border-radius 0.14rem
    position absolute
    background inherit

  &__text
    display flex
    flex-direction column
    align-items center
    z-index 1
