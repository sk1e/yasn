doctype html
include ./blocks/button/button.pug
include ./blocks/arrow-button/arrow-button.pug
include ./blocks/tooltip/tooltip.pug
include ./blocks/slider/slider.pug

html(lang="en")
  head
    meta(charset="utf-8")
    title UI kit
  body    
    .preview-column
      .preview-column
        h2 standard buttons
        .preview-row.preview-row_button-row
          +button("dark-1", "small", "button")
          +button("dark-1", "big", "button")
          +button("dark-2", "big", "button")
          +button("dark-2", "small", "button")
        .preview-row.preview-row_button-row
          +button("light-1", "small", "button")
          +button("light-1", "big", "button")
          +button("light-2", "big", "button")
          +button("light-2", "small", "button")
      .preview-column
        h2 arrow buttons
        .preview-row
          each theme in ["light-1", "inactive", "dark-1"]
            each side in ["left", "right"]
              +arrow-button(theme, side)
      .preview-column
        h2 percentages / pie chart
        .preview-row 
          each percents in [0, 38, 62, 89]
            canvas.percentage(value=percents width=100 height=100)
          canvas.pie-chart(values=[10, 30, 30, 30] width=100 height=100)
      .preview-column
        h2 sliders
        .preview-row
          +slider("tooltiped")
          +slider("scaled")
